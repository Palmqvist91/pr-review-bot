{
  "name": "pr-review-bot",
  "version": "1.0.3",
  "description": "A GitHub PR review bot that reviews pull requests and provides feedback",
  "main": "dist/index.js",
  "bin": {
    "pr-review-bot": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-images",
    "copy-images": "copyfiles -u 1 src/public/img/**/* dist/",
    "start": "node dist/index.js",
    "review": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "dev": "ts-node src/index.ts"
  },
  "keywords": [
    "github",
    "bot",
    "pr",
    "review"
  ],
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@octokit/auth-app": "4.0.9",
    "@octokit/rest": "19.0.7",
    "axios": "1.7.9",
    "dotenv": "16.4.7",
    "openai": "4.85.1"
  },
  "devDependencies": {
    "@types/node": "22.13.4",
    "copyfiles": "^2.4.1",
    "ts-node": "10.9.2",
    "typescript": "5.7.3"
  },
  "author": "PrHiGo",
  "license": "MIT"
}